# Orbital Dynamics: Centralized Secrets
# This file contains all sensitive configuration values for all labs
# DO NOT commit this file to version control

# VAST Connection Secrets
vast_password: "your_vast_password_here"
# Note: vastpy 0.3.17 only supports basic authentication
# vast_token: ""  # Not supported in vastpy 0.3.17
# vast_tenant_name: ""  # Not supported in vastpy 0.3.17  
# vast_api_version: "v1"  # Not supported in vastpy 0.3.17

# S3 Credentials for VAST Data Platform
s3_access_key: "your_s3_access_key_here"      # S3 access key for VAST
s3_secret_key: "your_s3_secret_key_here"      # S3 secret key for VAST

# Lab-Specific Secrets
lab1:
  # No additional secrets needed
  
lab2:
  vastdb_username: ""  # VAST database username for metadata catalog
  vastdb_password: ""  # VAST database password for metadata catalog
  
lab3:
  pipeline_db_password: ""  # Pipeline orchestration database password
  
lab4:
  snapshot_encryption_key: ""  # Key for encrypting sensitive snapshots
  
lab5:
  alert_db_password: ""  # Alert system database password
  event_detection_api_key: ""  # API key for astronomical event detection services

# Note: In production, use environment variables instead of hardcoded values
# export VAST_PASSWORD="your_actual_password"
# Note: vastpy 0.3.17 only supports basic authentication
# export VAST_TOKEN="your_api_token"  # Not supported in vastpy 0.3.17
# export VAST_TENANT_NAME="your_tenant_name"  # Not supported in vastpy 0.3.17
# export VAST_API_VERSION="v1"  # Not supported in vastpy 0.3.17
# export SLACK_WEBHOOK_URL="your_slack_webhook"
# export PAGERDUTY_API_KEY="your_pagerduty_key"

# S3 Environment Variables (alternative to hardcoded values)
# export AWS_ACCESS_KEY_ID="your_s3_access_key"
# export AWS_SECRET_ACCESS_KEY="your_s3_secret_key"
